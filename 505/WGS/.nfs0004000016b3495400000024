#!/bin/bash

cd /Network/Servers/avalanche.plb.ucdavis.edu/Volumes/Mammoth/Users/ruijuanli/505/WGS/vcf_raw

file=`ls *.gz | grep -v "A01"`

for i in $file	
	do
	echo $i
	vcf-shuffle-cols -t chrA01_random.vcf.gz $i > reordered/$i
	bgzip reordered/$i
	tabix -p vcf reordered/$i
done

mv chrA01_random.vcf.gz reordered
