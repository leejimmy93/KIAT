#!/bin/bash 

cd /Network/Servers/avalanche.plb.ucdavis.edu/Volumes/Mammoth/Users/ruijuanli/505/WGS/vcf_raw

# WGS 

file=`ls *.gz | sed 's/.vcf.gz//g'`
for i in $file	
	do
	echo $i
	/usr/local/stow/tassel-5-standalone/run_pipeline.pl -SortGenotypeFilePlugin -inputFile ${i}.vcf.gz -outputFile hmp/${i} -fileType VCF
	/usr/local/stow/tassel-5-standalone/run_pipeline.pl -Xmx100g -fork1 -vcf hmp/${i}.vcf -export -exportType Hapmap -runfork1
done

